<h1>Create Comic Entry</h1>

<form action="/comics" method="post">

  <div class="input-field">
    <input placeholder="Title" name="comic[title]" id="title" type="text" class="validate">
      <label for="title"></label>
  </div>

  <div class="input-field">
    <input placeholder="Publisher" name="comic[publisher]" id="publisher" type="text" class="validate">
      <label for="publisher"></label>
  </div>

  <div class="input-field">
    <input placeholder="Issue Number" name="comic[issue]" id="issue" type="text" class="validate">
      <label for="issue"></label>
  </div>
  <input type="submit" value="Create Listing" class="btn red">
</form>
