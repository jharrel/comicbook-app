<h1>Create Comic Entry</h1>

<form action="/comics" method="post">

  <div class="input-field">
    <input placeholder="Placeholder" name="comic[title]" id="title" type="text" class="validate">
      <label for="title">Title</label>
  </div>

  <div class="input-field">
    <input placeholder="Placeholder" name="comic[publisher]" id="publisher" type="text" class="validate">
      <label for="publisher">Publisher</label>
  </div>

  <div class="input-field">
    <input placeholder="Placeholder" name="comic[issue]" id="issue" type="text" class="validate">
      <label for="issue">Issue Number</label>
  </div>
  <input type="submit" value="Create Listing" class="btn blue">
</form>
