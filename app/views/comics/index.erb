<h1 class="center">Comics List</h1>

<table class="centered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Publisher</th>
      <th>Issue Number</th>
      <th>view</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @comics.each do |comic| %>
      <tr>
        <td><%= comic.title %></td>
        <td><%= comic.publisher %></td>
        <td><%= comic.issue %></td>
        <td><a href="/comics/<%= comic.id %>">View</a></td>
        <td><a href="/comics/<%= comic.id %>/edit">Edit</a></td>
        <td>
          <form action="/comics/<%= comic.id %>" method="post">
            <input type="hidden" name="_method" value="delete">
            <input type="submit" value="delete" class="btn blue">
          </form>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
